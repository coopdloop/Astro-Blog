        certTitle="CySA+"
        certIssuer="CompTIA"
        issueDate="May 2020"
      />
      <CertificateCard
        imageUrl="https://media.licdn.com/dms/image/C560BAQERAz2JBkUHzw/company-logo_100_100/0/1519856229209?e=1702512000&v=beta&t=5GmdDfCSF3z6M_rVX7VyTFUtYCp5OmY75Nu3fAWF7Dc"
