---
interface Props {
  imageUrl: string;
  title: string;
  companyName: string;
  workDurationStart: string;
  workDurationEnd: string;
}

const { imageUrl, title, companyName, workDurationStart, workDurationEnd } =
  Astro.props;
---

<span
  class="h-96 md:w-1/3 w-full bg-slate-300 rounded-2xl items-center flex flex-col"
>
  <img
    class="object-cover p-4 rounded-lg"
    src={imageUrl}
    alt={title}
    width="200"
    height="200"
  />
  <div class="text-center">
    <h1 class="font-semibold text-black text-3xl underline">{title}</h1>
    <p class="text-lg text-slate-500">{companyName}</p>
    <p class="text-lg text-slate-500 italic">
      {workDurationStart} - {workDurationEnd}
    </p>
  </div>
</span>
